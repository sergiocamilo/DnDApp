@{
    var U = Dnd_App.Utils.Session.CurrentSession();
}


<div id="subheader" class="section black-to-grey white-text">
    <div class="row">
        <div class="col s6">
            <h3 id="logo">My NPCs</h3>
        </div>
        <div class="col s6">
            <p>
                @Html.ActionLink("Create new", "New", "NPC", new { @class = "btn-large waves-effect waves-light right blue", @style = "margin-top: 10px;" })
            </p>
        </div>
    </div>
</div>



<div class="row">

    @foreach (var item in Dnd_App.Utils.TemporalDB.Instance.NPCInstances)
    {
        <div class="col s12 m4">
            <!-- Basic Card -->
            <div class="card orange-to-orangeblack z-depth-2">
                <div id="charcard-content" class="card-content white-text">
                    <span class="card-title">@item.Value.Name</span>
                    <hr />
                    <p>Armor Class: @item.Value.ArmorClass.Total </p>
                    <p>Hit Points: @item.Value.HitPoint.HitPointsAVG </p>
                    <hr />
                    <div class="row">
                        @foreach (var ascore in item.Value.AbilitiesScores)
                            {
                                <div class="col s6">
                                    @if (@ascore.ModValue >= 0)
                                    {
                                        <p>@ascore.ShortName : @ascore.Value (+@ascore.ModValue)</p>
                                    }
                                    else
                                    {
                                        <p>@ascore.ShortName : @ascore.Value (@ascore.ModValue)</p>
                                    }
                                </div>
                         }
                    </div>
                </div>
                <div id="charcard-action" class="card-action center">
                    <a class="white-text" href="#">Edit</a>
                    <a class="white-text" href="javascript:LoadNPCModalView(@item.Value.TempID);">View</a>
                    <a class="white-text" href="#">Delete</a>
                </div>
            </div>
        </div>
    }
</div>






