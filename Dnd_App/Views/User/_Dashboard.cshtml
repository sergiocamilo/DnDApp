@{
    var U = Dnd_App.Utils.Session.CurrentSession();
    U.LoadNPCs();
    U.LoadPCs();
}



<div id="subheader" class="section grey darken-4 white-text">
    <div class="row">
        <div class="col s6">
            <h4 class="light"><i class="fas fa-home"></i> Home</h4>
        </div>
    </div>
</div>

<div class="section">
    <div class="row">
        <div class="col s12">
            <h3 style="margin-top: 0px;">Welcome @U.UserName</h3>
        </div>
        <div class="col s6">
            <!-- Basic Card -->
            <div id="card-summary" class="card blue-grey darken-1 orange-to-orangeblack">
                <div class="card-content white-text">
                    <span class="card-title center">My NPCs</span>
                    <h2 class="center">@U.Npcs.Count</h2>
                </div>

                <div class="card-action center">
                    <a class="white-text" href="@Url.Action("New","NPC")">Create new</a>
                    <a class="white-text" href="javascript:LoadNPCs();">View all</a>
                </div>
            </div>
        </div>

        <div class="col s6">
            <!-- Basic Card -->
            <div class="card blue-grey darken-1 green-to-green">
                <div class="card-content white-text">
                    <span class="card-title">My PCs</span>
                    <h2 class="center">@U.Pcs.Count</h2>
                </div>
                <div class="card-action center">
                    <a class="white-text" href="@Url.Action("New","PC")">Create new</a>
                    <a class="white-text" href="javascript:LoadPCs();">View all</a>
                </div>
            </div>
        </div>

        <div class="col s12">
            <!-- Basic Card -->
            <div class="card white z-depth-3 red-to-red">
                <div class="card-content white-text">
                    <span class="card-title">My Combats</span>
                </div>
                <div class="card-action red-text center">
                    <a class="white-text" href="@Url.Action("New","Combat")">Create new</a>
                    <a class="white-text" href="@Url.Action("Join","Combat")">Join</a>

                </div>
            </div>
        </div>

        
    </div>
</div>





