
@{
    ViewBag.Title = "Validate user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="noir">
    <div class="row login-row">
        <div class="col s4 offset-s4 card-panel white darken-4 login-panel">
            @if (TempData["validateerror"] != null)
            {
                <br />
                TempData["validateerror"] = null;
                <div class="row red">
                    <div class="input-field col s12 center">
                        <p class="white-text">Token is not valid</p>
                        <p class="white-text">Please Copy and Paste token of your email</p>
                    </div>
                </div>
            }
            else
            {
                <br />
                <div class="row red">
                    <div class="input-field col s12 center">
                        <p class="white-text">Please Copy and Paste token of your email</p>
                    </div>
                </div>
            }
            @using (Html.BeginForm("Validate", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="input-field col s12 center">
                        <h5 id="logo" class="black-text">Validate</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBox("Username", null, new { @id = "username", @type = "text" })
                        <label for="username" class="center-align">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBox("Password", null, new { @id = "Password", @type = "password" })
                        <label for="Password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBox("Token", null, new { @id = "token", @type = "text" })
                        <label for="token">Token</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="btn waves-effect waves-light col s12 blue darken-2">Validate</button>
                    </div>
                </div>
            }
            <hr />
        </div>
    </div>
</main>





