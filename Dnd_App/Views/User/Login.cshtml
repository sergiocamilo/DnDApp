
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="fire">
    <div class="login-row row">
        <div class="col s4 offset-s4 card-panel white darken-4 login-panel">
            @if (TempData["loginerror"] != null)
            {
                <br />
                TempData["loginerror"] = null;
                <div class="row red">
                    <div class="input-field col s12 center">
                        <p class="white-text">User or password are incorrect</p>
                        <p class="white-text">Or your user is not active</p>
                        <p class="white-text">Please go to /Validate</p>
                    </div>
                </div>
            }
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="input-field col s12 center">
                        <h5 id="logo" class="black-text">Login</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBox("Username", null, new { @id = "username", @type = "text" })
                        <label for="username" class="center-align">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBox("Password", null, new { @id = "Password", @type = "password" })
                        <label for="Password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="btn waves-effect waves-light col s12 blue darken-2">Login</button>
                    </div>
                </div>
            }
            <hr />
            <div class="row">
                <div class="input-field col s12">
                    <a href="@Url.Action("Register","User")" class="btn waves-effect waves-light col s12 yellow darken-2">Register</a>
                </div>
            </div>
        </div>
    </div>
</main>

