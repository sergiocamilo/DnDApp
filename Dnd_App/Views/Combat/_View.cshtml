@model Dnd_App.Models.Combat.Combat

<div class="card-panel red-to-red white-text">
    <div class="row">
        <div class="col s12">
            <h3>@Model.Name</h3>
        </div>
        <div class="col s12">
            <div class="chip">Dungeon Master: @Model.DM.User.UserName</div>
            @for (int i = 0; i < Model.Participants.Count; i++)
            {
                <div class="chip">Player: @Model.Participants[i].User.UserName</div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <ul class="collection">
                @for (int i = 0; i < 3; i++)
                {
                    <li class="collection-item avatar orange-to-orangeblack">
                        <i class="material-icons circle orange">security</i>
                        <span class="title">Deva (NPC)</span>
                        <p>
                            Initiative: 10
                        </p>
                        <a href="#!" class="secondary-content btn-flat red white-text">Delete</a>
                    </li>

                }
                @for (int i = 0; i < 3; i++)
                {
                    <li class="collection-item avatar green-to-green">
                        <i class="material-icons circle orange">account_circle</i>
                        <span class="title">Deva (Username)</span>
                        <p>
                            Initiative: 10
                        </p>
                        <a href="#!" class="secondary-content btn-flat red white-text">Delete</a>
                    </li>

                }
            </ul>
        </div>
    </div>
</div>

