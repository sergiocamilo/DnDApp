@model Dnd_App.Models.Combat.Combat

<ul class="collection">

    @foreach (var character in Model.Characters)
    {
        if (character.Type == Dnd_App.Models.Enum.TypeCharacter.NPC)
        {
            var npc = Model.NPCs[character.iList];
            <li class="collection-item orange-to-orangeblack white-text">
                <div class="row">
                    <div class="col s9">
                        <h5 class="title">@npc.NPC.Name (NPC)</h5>
                        <p>HP: @npc.NPC.HitPoint.HitPointsAVG</p>
                    </div>
                    <div class="col s3">
                        <a href="javascript:applyActionTo(@character.iList, 0);" class="secondary-content btn-flat blue white-text">Apply</a>
                    </div>
                    <div class="col s12"></div>
                </div>
            </li>
        }
        else
        {
            var pc = Model.PCs[character.iList];
            <li class="collection-item green-to-green white-text">
                <div class="row">
                    <div class="col s9">
                        <h5 class="title">@pc.PC.name (@pc.User.UserName)</h5>
                        <span>HP: @pc.PC.hitPoint.HitPointsAVG</span>
                    </div>
                    <div class="col s3">
                        <a href="javascript:applyActionTo(@character.iList, 1);" class="secondary-content btn-flat blue white-text">Apply</a>
                    </div>
                    <div class="col s12"></div>
                </div>
            </li>
        }
    }
</ul>